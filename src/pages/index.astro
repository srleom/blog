---
import PageLayout from '../layouts/BaseLayout.astro'
import Section from '../components/Section.astro'
import Card from '../components/Card.astro'
import ProjectCard from '../components/ProjectCard.astro'
import Label from '../components/Label.astro'
import SkillLayout from '../components/SkillLayout.astro'
import PostPreview from '@/components/blog/PostPreview.astro'

import { Image } from 'astro:assets'
import profile from '../assets/profile.png'

import { getAllPosts, sortMDByDate } from '@/utils'

const languages = ['English', 'Chinese']
const frontend = ['HTML', 'CSS', 'Javascript', 'Svelte', 'React', 'Tailwind']
const backend = ['Node.js', 'SvelteKit', 'Astro', 'SQL', 'ORM', 'Python']
const others = [
	'Excel',
	'MS Office',
	'UI/UX',
	'Web Design',
	'Graphic Design',
	'Copywriting',
	'Marketing'
]

const MAX_POSTS = 10
const allPosts = await getAllPosts()
const allPostsByDate = sortMDByDate(allPosts).slice(0, MAX_POSTS)
---

<PageLayout meta={{ title: 'Home' }}>
	<div class='flex w-full flex-col gap-y-10'>
		<section class='flex flex-col items-center gap-y-7'>
			<Image
				src={profile}
				alt='profile photo'
				class='h-28 w-auto rounded-full bg-[#FFBE98]'
				loading='eager'
			/>
			<div class='flex flex-col items-center gap-y-4'>
				<h1 class='text-3xl font-bold'>Leom Sheng Rui</h1>
				<div
					class='flex flex-row items-center gap-x-3 rounded-3xl border border-input px-4 py-2 text-sm shadow-sm'
				>
					<span class='relative flex items-center justify-center'>
						<span
							class='absolute inline-flex h-2 w-2 animate-ping rounded-full border border-green-400 bg-green-400 opacity-75'
						></span>
						<span class='relative inline-flex h-2 w-2 rounded-full bg-green-400'></span>
					</span>

					<p class=''>Available for work</p>
				</div>
				<div class='flex gap-x-7'>
					<Label title='Startup Enthusiast'>
						<svg xmlns='http://www.w3.org/2000/svg' viewBox='0 0 24 24' class='h-5 w-5' slot='icon'
							><path
								fill='currentColor'
								d='M4.615 20q-.69 0-1.152-.462Q3 19.075 3 18.385v-9.77q0-.69.463-1.152Q3.925 7 4.615 7H9V5.615q0-.69.463-1.152Q9.925 4 10.615 4h2.77q.69 0 1.153.463q.462.462.462 1.152V7h4.385q.69 0 1.152.463q.463.462.463 1.152v9.77q0 .69-.462 1.152q-.463.463-1.153.463zm0-1h14.77q.23 0 .423-.192q.192-.193.192-.423v-9.77q0-.23-.192-.423Q19.615 8 19.385 8H4.615q-.23 0-.423.192Q4 8.385 4 8.615v9.77q0 .23.192.423q.193.192.423.192M10 7h4V5.615q0-.23-.192-.423Q13.615 5 13.385 5h-2.77q-.23 0-.423.192q-.192.193-.192.423zM4 19V8z'
							></path></svg
						>
					</Label>
					<Label title='Singapore'>
						<svg xmlns='http://www.w3.org/2000/svg' viewBox='0 0 24 24' class='h-5 w-5' slot='icon'
							><path
								fill='currentColor'
								d='M12.003 11.73q.668 0 1.14-.475q.472-.475.472-1.143t-.475-1.14q-.476-.472-1.143-.472t-1.14.476q-.472.475-.472 1.143t.475 1.14q.476.472 1.143.472M12 19.677q2.82-2.454 4.458-4.991q1.638-2.538 1.638-4.39q0-2.744-1.737-4.53T12 3.981q-2.621 0-4.359 1.785t-1.737 4.53q0 1.852 1.638 4.39q1.639 2.537 4.458 4.99m0 1.343q-3.525-3.117-5.31-5.814q-1.786-2.697-1.786-4.909q0-3.173 2.066-5.234Q9.037 3 12 3t5.03 2.062q2.066 2.061 2.066 5.234q0 2.212-1.785 4.909q-1.786 2.697-5.311 5.814m0-10.904'
							></path></svg
						>
					</Label>
					<Label
						title='Connect on Linkedin'
						as='a'
						href='https://www.linkedin.com/in/srleom/'
						class='underline underline-offset-4'
						target="_blank"
					>
						<svg
							xmlns='http://www.w3.org/2000/svg'
							viewBox='0 0 16 16'
							slot='icon'
							class='h-5 w-5 text-foreground/75'
							><path
								fill='currentColor'
								d='M0 1.146C0 .513.526 0 1.175 0h13.65C15.474 0 16 .513 16 1.146v13.708c0 .633-.526 1.146-1.175 1.146H1.175C.526 16 0 15.487 0 14.854zm4.943 12.248V6.169H2.542v7.225zm-1.2-8.212c.837 0 1.358-.554 1.358-1.248c-.015-.709-.52-1.248-1.342-1.248S2.4 3.226 2.4 3.934c0 .694.521 1.248 1.327 1.248zm4.908 8.212V9.359c0-.216.016-.432.08-.586c.173-.431.568-.878 1.232-.878c.869 0 1.216.662 1.216 1.634v3.865h2.401V9.25c0-2.22-1.184-3.252-2.764-3.252c-1.274 0-1.845.7-2.165 1.193v.025h-.016l.016-.025V6.169h-2.4c.03.678 0 7.225 0 7.225z'
							></path></svg
						>
					</Label>
				</div>
			</div>
		</section>

		<Section title='About'>
			<p class='text-muted-foreground'>
				I'm a self-taught full-stack developer and budding entrepreneur with a passion for bringing
				innovative ideas to life. In my free time, I build software, work on business projects, and
				explore emerging technologies like artificial intelligence and blockchain technology.
				Occasionally, I write what's on my mind too. Feel free to connect with me on LinkedIn.
			</p>
		</Section>

		<Section title='Posts'>
			<ul class='flex flex-col gap-y-2'>
				{
					allPostsByDate.map((p) => (
						<li class='flex flex-col gap-x-2 sm:flex-row'>
							<PostPreview post={p} />
						</li>
					))
				}
			</ul>
		</Section>

		<Section title='Experience'>
			<Card
				heading='Infantry Officer'
				subheading='Singapore Armed Forces'
				date='Dec 2022 - Nov 2023'
				imagePath='/src/assets/saf.png'
				altText='Singapore Armed Forces Logo'
				imageClass='h-12 w-auto md:-left-20'
			>
				<ul class='ml-4 list-disc text-muted-foreground'>
					<li>Platoon Commander at the Singapore Armed Forces Basic Military Training Centre</li>
					<li>
						Oversaw and executed a rigorous training curriculum, with a focus on instilling soldier
						fundamentals, physical fitness, and leadership qualities in recruits
					</li>
				</ul>
			</Card>
			<Card
				heading='Business Development and Marketing Lead'
				subheading='人之初 Languange Centre'
				date='Jan 2018 - Dec 2021'
				imagePath='/src/assets/rzc.png'
				altText='人之初 Languange Centre Logo'
				imageClass='h-6 w-auto md:-left-32'
			>
				<ul class='ml-4 list-disc text-muted-foreground'>
					<li>
						Crafted business development strategies with the centre’s executives and spearheaded
						marketing efforts in revitalising the brand and driving impactful marketing campaigns
					</li>
					<li>
						Orchestrated a complete overhaul of the brand, achieving a more than 50% increase in
						student count with successful ad campaigns
					</li>
				</ul>
			</Card>
		</Section>

		<Section title='Education'>
			<Card
				heading='Renaissance Engineering Programme Scholar'
				subheading='Nanyang Technological University'
				date='Aug 2024 - Feb 2029'
				imagePath='/src/assets/ntu.png'
				altText='Nanyang Technological University Logo'
				imageClass='h-8 w-auto md:-left-32'
			/>
			<Card
				heading='Raffles Institution'
				subheading='Integrated Programme'
				date='Jan 2016 - Dec 2021'
				imagePath='/src/assets/ri.png'
				altText='Raffles Insitution Logo'
				imageClass='h-12 w-auto md:-left-[4.5rem]'
			>
				<ul class='ml-4 list-disc text-muted-foreground'>
					<li>A Levels: 88.75RP</li>
					<li>Class Executive Council (CEC) chairman (2018-2019)</li>
					<li>Vice-captain of Raffles Institution Table Tennis (RITT) team (2018-2021)</li>
				</ul>
			</Card>
		</Section>

		<Section title='Projects'>
			<div class='flex flex-col gap-y-3 sm:flex-row sm:gap-x-3 sm:gap-y-0'>
				<ProjectCard
					href='https://www.sveltetodo.xyz/'
					heading='toDo'
					subheading='A simple toDo app with authentication functionality built with SvelteKit, Tailwind and Supabase'
					imagePath='/src/assets/svelte_todo.jpg'
					altText='Svelte Todo App Mockup'
					class='w-full sm:w-1/2'
				/>
				<ProjectCard
					as='div'
					heading='Coming soon...'
					subheading=''
					imagePath='/src/assets/coming-soon.png'
					altText='Svelte Todo App Mockup'
					class='w-full sm:w-1/2'
				/>
			</div>
		</Section>

		<Section title='Certifications'>
			<Card
				as='a'
				heading='CS50’s Introduction to Artificial Intelligence with Python'
				subheading='Achieved full score in all twelve problem sets'
				date='Mar 2024 - Mar 2024'
				imagePath='/src/assets/harvard.png'
				altText='Harvard Logo'
				imageClass='h-11 w-auto md:-left-[4.5rem]'
				href='https://certificates.cs50.io/748e70be-5326-4f39-9717-117168342e3e.pdf?size=A4'
			/>
			<Card
				as='a'
				heading='CS50x Introduction to Computer Science'
				subheading='Achieved full score in all ten problem sets and completed one final project'
				date='Jan 2024 - Jan 2024'
				imagePath='/src/assets/harvard.png'
				altText='Harvard Logo'
				imageClass='h-11 w-auto md:-left-[4.5rem]'
				href='https://certificates.cs50.io/bbef01db-94b5-4de4-b7a7-f2f63d866d17.pdf?size=letter'
			/>
		</Section>

		<Section title='Skills'>
			<SkillLayout title='Languages' skills={languages} />
			<SkillLayout title='Frontend' skills={frontend} />
			<SkillLayout title='Backend' skills={backend} />
			<SkillLayout title='Others' skills={others} />
		</Section>
	</div>
</PageLayout>
